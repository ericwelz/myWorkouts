extends layout

block content
  h1= title
  p.subtitle List, Add, and Delete #{title}
  
  table
    thead
    tbody
      tr
        td.buttontable
          a(href="/")
            button.active(type="button") Home
        td.buttontable
          a(href="muscleGroups")
            button.inactive(type="button") Muscle Groups
        td.buttontable
          form#unfiltexercise(name="unfiltexercise",method="post",action="/exercises")
            input(type="hidden", name="filter", value="nofilter")
            button.active(type="submit") Exercises
        td.buttontable
          a(href="sets")
            button.active(type="button") Sets
        td.buttontable
          a(href="cardio")
            button.active(type="button") Cardio</br>Workouts
   
  form#formAddMuscleGroup(name="addmusclegroup",method="post",action="/muscleGroups/addmusclegroup")
    table.formtable
      thead.formtable
        tr
          th.formtable Add Muscle Group
      tbody.formtable
        tr.formtable
          td.formtable
            input#inputGroupName(type="text", placeholder="groupname", name="name")
            input#inputDescription(type="text", placeholder="description", name="description")
            button#btnSubmit(type="submit") Add
  
  table
    thead
      tr
        th Group Name
        th.descDisplay Group Description
    tbody
      each group, i in musclegroups
        tr
          td #{group.name}
          td.descDisplay #{group.description}
   
  form#formDeleteMuscleGroup(name="delmusclegroup",method="post",action="/muscleGroups/delmusclegroup")
    table.formtable
      thead.formtable
        tr
          th.formtable Delete Muscle Group
      tbody.formtable
        tr.formtable
          td.formtable
            select(name="delname")
              option(selected="selected", disabled="disabled") Choose Muscle Group...
              each group, i in musclegroups
                option #{group.name}
            button#btnSubmit(type="submit") Delete
 
